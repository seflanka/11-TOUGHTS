<div class="home-header">
    {{#if search}}
        <h1>Você esta buscando por: <span>{{search}}</span></h1>
        {{#if toughtsQty}}
            <p>Foram encontrados <span>{{toughtsQty}}</span> Postagens</p>
        {{else}}
            <p>Nehuma postagem foi encontrado para o termo <span>{{search}}</span></p>
        {{/if}}
    {{else}}
        <h1>Visualize todas as postagens aqui<span>Posts</span>:</h1>
    {{/if}}
    <form action="/" method="GET">
        <input type="text" name="search" placeholder="Está buacando por algo?">
        <input type="submit" class="btn" value="Buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="/" method="GET">
        <input type="hidden" name="search" value="{{this.search}}">
        <input type="hidden" name="order" value="old">
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>
<div class="toughts-container">
    {{#each toughts}}
        <figure>
            <blockquote>
                "{{this.title}}"
            </blockquote>
            <figcaption>Autor: <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>